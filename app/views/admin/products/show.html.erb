<ol class="breadcrumb">
<h1><%= @product.name %></h1>

<p>
  Price: <%= number_to_currency @product.price %> </p>

 
<%= form_for [:admin, @product], html: {class: "form-horizontal", role: "form"} do |f| %>
 <p>
 <%= image_tag @product.image_url, alt: @product.name,
    style: 'max_width: 500px' %></p>

<div class="form-group">
  <%= @product.created_at.strftime('%A, %d %b %Y %l:%M %p') %> 
</div>

<div class="form-group">
  <%= link_to "Edit Product", edit_admin_product_path, class: 'btn btn-success' %>
</div>

<div class="form-group">
  <%= link_to "Delete product", admin_product_path(@product), method: :delete, data: { confirm: 'Are you sure you want to delete this product?' }, class: 'btn btn-success' %>
</div>

<div class="form-group">
  <%= link_to "Back to Product List", admin_products_path, class: 'btn btn-success'  %>
</div>
<% end %>
</ol>