<h1>Customers</h1>

<p><%= link_to "Add New Customer", new_admin_customer_path %></p>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>State</th>
    <th>Zip Code</th>
  </tr>
  <% for customer in @customers %>
    <tr>
      <td><%= link_to customer.id, admin_customer_path(customer) %></td>
      <td><%= customer.name %></td>
      <td><%= customer.email%></td>
      <td><%= time_ago_in_words customer.created_at %> ago
      <%= customer.created_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
      <td><%= time_ago_in_words customer.updated_at %> ago
      <%= customer.updated_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
      <td><%= customer.state %></td>
      <td><%= customer.zip_code %></td>
    </tr>
  <% end %>
</table>